<?xml version="1.0" encoding="utf-8"?>
<nrml
xmlns="http://openquake.org/xmlns/nrml/0.5"
xmlns:gml="http://www.opengis.net/gml"
>
    <sourceModel
    name="Example Source Model containing a Characteristic Fault Source defined by a sequence of Planar Surfaces"
    >
        <characteristicFaultSource
        id="1"
        name="Characteristic Fault Source with multiple Planar Surfaces"
        tectonicRegion="Active Shallow Crust"
        >
            <incrementalMFD
            binWidth="0.1"
            minMag="7.0"
            >
                <occurRates>
                    0.004
                </occurRates>
            </incrementalMFD>
            <rake>
                90.0
            </rake>
            <surface>
                <planarSurface
                dip="45.0"
                strike="90.0"
                >
                    <topLeft depth="0.0" lat="-2.3" lon="-0.8"/>
                    <topRight depth="0.0" lat="-2.3" lon="-0.4"/>
                    <bottomLeft depth="10.0" lat="-2.389" lon="-0.8"/>
                    <bottomRight depth="10.0" lat="-2.389" lon="-0.4"/>
                </planarSurface>
                <planarSurface
                dip="30.0"
                strike="30.94744"
                >
                    <topLeft depth="0.0" lat="-2.3" lon="-0.42"/>
                    <topRight depth="0.0" lat="-2.09945" lon="-0.29967"/>
                    <bottomLeft depth="10.0" lat="-2.38009" lon="-0.28629"/>
                    <bottomRight depth="10.0" lat="-2.17955" lon="-0.16598"/>
                </planarSurface>
            </surface>
        </characteristicFaultSource>
    </sourceModel>
</nrml>
