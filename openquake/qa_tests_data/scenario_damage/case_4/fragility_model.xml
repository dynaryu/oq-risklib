<?xml version="1.0" encoding="utf-8"?>
<nrml
xmlns="http://openquake.org/xmlns/nrml/0.5"
xmlns:gml="http://www.opengis.net/gml"
>
    <fragilityModel
    format="continuous"
    >
        <description>
            Fragility model for buildings
        </description>
        <limitStates>
            LS1 LS2
        </limitStates>
        <ffs
        type="lognormal"
        >
            <taxonomy>
                RM
            </taxonomy>
            <IML
            IMT="PGA"
            imlUnit="g"
            maxIML="1.5"
            minIML="0.02"
            >
                PGA None 0.02 1.5 g
            </IML>
            <ffc
            ls="LS1"
            >
                <params
                mean="0.15"
                stddev="0.10"
                >
                    0.15 0.1
                </params>
            </ffc>
            <ffc
            ls="LS2"
            >
                <params
                mean="0.30"
                stddev="0.16"
                >
                    0.3 0.16
                </params>
            </ffc>
        </ffs>
        <ffs
        type="lognormal"
        >
            <taxonomy>
                RC
            </taxonomy>
            <IML
            IMT="SA(0.2)"
            imlUnit="g"
            maxIML="1.5"
            minIML="0.02"
            >
                SA(0.2) None 0.02 1.5 g
            </IML>
            <ffc
            ls="LS1"
            >
                <params
                mean="0.25"
                stddev="0.08"
                >
                    0.25 0.08
                </params>
            </ffc>
            <ffc
            ls="LS2"
            >
                <params
                mean="0.55"
                stddev="0.16"
                >
                    0.55 0.16
                </params>
            </ffc>
        </ffs>
        <ffs
        type="lognormal"
        >
            <taxonomy>
                W
            </taxonomy>
            <IML
            IMT="SA(0.5)"
            imlUnit="g"
            maxIML="1.5"
            minIML="0.02"
            >
                SA(0.5) None 0.02 1.5 g
            </IML>
            <ffc
            ls="LS1"
            >
                <params
                mean="0.35"
                stddev="0.12"
                >
                    0.35 0.12
                </params>
            </ffc>
            <ffc
            ls="LS2"
            >
                <params
                mean="0.70"
                stddev="0.20"
                >
                    0.7 0.2
                </params>
            </ffc>
        </ffs>
    </fragilityModel>
</nrml>
